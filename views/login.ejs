<!--create login page with the following fields: username, password using html with inline styling-->

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />

    <title>Log In</title>

    <style>
      body {
        background-color: #f1f1f1;
      }

      .container {
        width: 100%;

        height: 100vh;

        display: flex;

        justify-content: center;

        align-items: center;

        flex-direction: column;
      }

      .container h1 {
        font-size: 50px;

        font-weight: 500;

        margin-bottom: 20px;
      }
      /*style form*/

      .container form {
        width: 400px;

        height: 300px;

        display: flex;

        justify-content: center;

        align-items: center;

        flex-direction: column;
      }

      .container form input {
        width: 300px;

        height: 50px;

        border: none;

        outline: none;

        border-radius: 5px;

        font-size: 20px;

        font-weight: 500;

        margin-bottom: 20px;
      }

      .container form input:last-child {
        background-color: #1da1f2;

        color: #fff;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>Log In</h1>

      <form action="/login" method="post">
        <input type="text" name="username" placeholder="Username" required />

        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />

        <input type="submit" name="submit" value="Log In" />
      </form>
    </div>
  </body>
</html>
